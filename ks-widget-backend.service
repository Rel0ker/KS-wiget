[Unit]
Description=KS Widget Backend
After=network.target postgresql.service

[Service]
Type=exec
User=root
Group=root
WorkingDirectory=/root/backend
Environment=DJANGO_SETTINGS_MODULE=ks_widget.settings_production
ExecStart=/root/backend/venv/bin/gunicorn --config gunicorn.conf.py ks_widget.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target



